<project
    xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd"
    >
    <modelVersion>4.0.0</modelVersion>

    <!--+
        | Maven parent project.
        | http://maven.apache.org/guides/introduction/introduction-to-the-pom.html#Project_Inheritance
        +-->
    <parent>
        <groupId>uk.ac.roe.wfau</groupId>
        <artifactId>firethorn-ogsadai-dqp</artifactId>
        <version project='firethorn'>1.12.8-stv-pyrothorn-timeout</version>
	</parent>

    <artifactId>firethorn-ogsadai-dqp-firethorn</artifactId>
    <packaging>jar</packaging>

    <name>FireThorn OGSA-DAI distributed queries (firethorn)</name>
    <description>
        <![CDATA[
        This package is needed to resolve circular dependencies between the OGSA-DAI DQP server components,
        OGSA-DAI Astronomy extensions and the FireThorn metadata client.
        ]]>
    </description>

    <properties>
    </properties>

    <dependencies>

        <!--+
            | OGSA-DAI DQP server components.
            +-->
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>firethorn-ogsadai-dqp-server</artifactId>
            <version>${project.version}</version>
            <type>jar</type>
        </dependency>

        <!--+
            | OGSA-DAI Astronomy extensions.
            +-->
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>firethorn-ogsadai-astro-server</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!--+
            | FireThorn metadata client.
            +-->
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>firethorn-ogsadai-metadata-client</artifactId>
            <version>${project.version}</version>
        </dependency>

    </dependencies>

</project>


