<?xml version="1.0" encoding="UTF-8"?>
<beans
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd"
        >
    <import resource="../DQPCompilerConfiguration.xml"/>
    <!-- ***********************
        DQP Federation 
       *********************** -->

    <!--+
        | Use a local properties file.
        | http://blog.callistaenterprise.se/2011/11/17/configure-your-spring-web-application/
        +-->
    <context:property-placeholder location="file:${user.home}/firethorn.properties"/>

    <!--+
        | Feature support helper - default can be configured here
        | or replace with another implementation class.
        +-->
    <bean class="uk.org.ogsadai.dqp.presentation.common.DefaultFeatureSupportHelper" id="defaultFeatureSupport"/>

    <!--+
        | Jersey evaluation node.
        +-->
    <bean class="uk.org.ogsadai.dqp.presentation.jersey.JerseyEvaluationNode" id="TestDqpEval">
        <constructor-arg name="url"     value="${firethorn.ogsadai.endpoint}"/>
        <constructor-arg name="drerID"  value="DataRequestExecutionResource"/>
        <constructor-arg name="dsos"    value="dataSources"/>
        <constructor-arg name="dsis"    value="dataSinks"/>
        <constructor-arg name="isLocal" type="boolean" value="true"/>
    </bean>

    <!--+
        | TWOMASS data node.
        +-->
    <bean id="twomass" class="uk.org.ogsadai.dqp.presentation.common.SimpleDataNode">
        <constructor-arg name="resourceID"     value="twomass"/>
        <constructor-arg name="evaluationNode" ref="TestDqpEval"/>
        <property name="operatorSupport"       ref="defaultFeatureSupport"/>
        <property name="expressionSupport"     ref="defaultFeatureSupport"/>
        <property name="arithmeticExpressionSupport" ref="defaultFeatureSupport"/>
    </bean>

    <!--+
        | UKIDSS data node.
    <bean id="ukidss" class="uk.org.ogsadai.dqp.presentation.common.SimpleDataNode">
        <constructor-arg name="resourceID"     value="ukidss"/>
        <constructor-arg name="evaluationNode" ref="TestDqpEval"/>
        <property name="operatorSupport"       ref="defaultFeatureSupport"/>
        <property name="expressionSupport"     ref="defaultFeatureSupport"/>
        <property name="arithmeticExpressionSupport" ref="defaultFeatureSupport"/>
    </bean>
        +-->

    <!--+
        | ATLAS data node.
        +-->
    <bean id="atlas" class="uk.org.ogsadai.dqp.presentation.common.SimpleDataNode">
        <constructor-arg name="resourceID"     value="atlas"/>
        <constructor-arg name="evaluationNode" ref="TestDqpEval"/>
        <property name="operatorSupport"       ref="defaultFeatureSupport"/>
        <property name="expressionSupport"     ref="defaultFeatureSupport"/>
        <property name="arithmeticExpressionSupport" ref="defaultFeatureSupport"/>
    </bean>

    <!--+
        | WFAU data node.
        +-->
    <bean id="wfau" class="uk.org.ogsadai.dqp.presentation.common.SimpleDataNode">
        <constructor-arg name="resourceID"     value="wfau"/>
        <constructor-arg name="evaluationNode" ref="TestDqpEval"/>
        <property name="operatorSupport"       ref="defaultFeatureSupport"/>
        <property name="expressionSupport"     ref="defaultFeatureSupport"/>
        <property name="arithmeticExpressionSupport" ref="defaultFeatureSupport"/>
    </bean>

    <!--+
        | Local user data node.
        +-->
    <bean id="userdata" class="uk.org.ogsadai.dqp.presentation.common.SimpleDataNode">
        <constructor-arg name="resourceID"     value="userdata"/>
        <constructor-arg name="evaluationNode" ref="TestDqpEval"/>
        <property name="operatorSupport"       ref="defaultFeatureSupport"/>
        <property name="expressionSupport"     ref="defaultFeatureSupport"/>
        <property name="arithmeticExpressionSupport" ref="defaultFeatureSupport"/>
    </bean>

    <!--+
        | DQP federation.
        +-->
    <bean id="federation" 
        class="uk.org.ogsadai.dqp.firethorn.MetadataServiceDQPFederation">

        <property name="metadataServiceFactory">
            <bean class="uk.ac.roe.wfau.firethorn.ogsadai.metadata.client.rest.MetadataServiceFactoryImpl">
                <constructor-arg name="endpoint" value="${firethorn.webapp.endpoint}"/>
            </bean>
        </property>

        <property name="dataNodesMap">
            <map>
                <!--+
                <entry key="ukidss">
                    <ref bean="ukidss"/>
                </entry>
                    +-->
                <entry key="twomass">
                    <ref bean="twomass"/>
                </entry>
                <entry key="atlas">
                    <ref bean="atlas"/>
                </entry>
                <entry key="wfau">
                    <ref bean="wfau"/>
                </entry>
                <entry key="userdata">
                    <ref bean="userdata"/>
                </entry>
            </map>
        </property>

        <property name="evaluationNodes">
            <list>
                <ref bean="TestDqpEval"/>
            </list>
        </property>

    </bean>
</beans>

