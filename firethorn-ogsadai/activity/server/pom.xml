<project
    xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd"
    >
    <modelVersion>4.0.0</modelVersion>

    <!--+
        | Maven parent project.
        | http://maven.apache.org/guides/introduction/introduction-to-the-pom.html#Project_Inheritance
        +-->
    <parent>
        <groupId>uk.ac.roe.wfau</groupId>
        <artifactId>firethorn-ogsadai-activity</artifactId>
        <version project='firethorn'>1.11.19-zrq-dqp-switch</version>
    </parent>

    <artifactId>firethorn-ogsadai-activity-server</artifactId>
    <packaging>jar</packaging>

    <name>FireThorn OGSA-DAI activity (server)</name>
    <description>
        <![CDATA[
        Server (OGSA-DAI) components for the FireThorn OGSA-DAI activities.
        ]]>
    </description>

    <properties>

        <!--org.log4j.version>1.2.8</org.log4j.version-->
        <!--org.slf4j.version>1.5.6</org.slf4j.version-->

    </properties>

    <dependencies>

        <!--+
            | OGSA-DAI dependencies.
            +-->
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>firethorn-ogsadai-depends</artifactId>
            <version>${project.version}</version>
            <type>pom</type>
        </dependency>

        <!--+
            | Our common activity classes.
            +-->
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>firethorn-ogsadai-activity-common</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!--+
            | The OGSA-DAI components used by our activity.
            | http://data.metagrid.co.uk/wfau/maven/external/uk/org/ogsadai/
            +-->
        <dependency>
            <groupId>uk.org.ogsadai</groupId>
            <artifactId>ogsadai-common</artifactId>
            <version>${ogsadai.version}</version>
        </dependency>
        <dependency>
            <groupId>uk.org.ogsadai</groupId>
            <artifactId>ogsadai-server</artifactId>
            <version>${ogsadai.version}</version>
        </dependency>
        <dependency>
            <groupId>uk.org.ogsadai</groupId>
            <artifactId>ogsadai-clientserver</artifactId>
            <version>${ogsadai.version}</version>
        </dependency>
        <dependency>
            <groupId>uk.org.ogsadai</groupId>
            <artifactId>ogsadai-relational-client</artifactId>
            <version>${ogsadai.version}</version>
        </dependency>
        <dependency>
            <groupId>uk.org.ogsadai</groupId>
            <artifactId>ogsadai-relational-server</artifactId>
            <version>${ogsadai.version}</version>
        </dependency>
        <dependency>
            <groupId>uk.org.ogsadai</groupId>
            <artifactId>ogsadai-astro-server</artifactId>
            <version>${ogsadai.version}</version>
        </dependency>

        <!--+
            | The StarLink VOTAble library, used by our TAP client Activity. 
            +-->
        <dependency>
            <groupId>uk.ac.starlink</groupId>
            <artifactId>stil-votable</artifactId>
        </dependency>
        <dependency>
            <groupId>uk.ac.starlink</groupId>
            <artifactId>stil-table</artifactId>
        </dependency>

	    <!--+
	        | The Apache HttpComponent libraries, used by our TAP client Activity. 
	        +-->
        <dependency>
            <groupId>org.apache.httpcomponents</groupId>
            <artifactId>httpclient</artifactId>
        </dependency>

    </dependencies>

    <build>

        <testResources>

            <!--+
                | Test configuration files.
                +-->
    		<testResource>
    			<directory>${basedir}/src/test/conf</directory>
                <includes>
                    <include>*.properties</include>
                    <include>*.xml</include>
                </includes>
    		</testResource>

        </testResources>

    </build>

</project>


