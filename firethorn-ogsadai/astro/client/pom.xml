<project
    xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd"
    >
    <modelVersion>4.0.0</modelVersion>

    <!--+
        | Maven parent/child inheritance.
        | http://maven.apache.org/guides/introduction/introduction-to-the-pom.html#Project_Inheritance
        +-->
    <parent>
        <groupId>uk.ac.roe.wfau</groupId>
        <artifactId>firethorn-ogsadai-astro</artifactId>
        <version project='firethorn'>2.0.21</version>
    </parent>

    <artifactId>firethorn-ogsadai-astro-client</artifactId>
    <packaging>jar</packaging>

    <name>FireThorn OGSA-DAI astronomy extensions (client)</name>
    <description>
        <![CDATA[
        Client (OGSA-DAI) components for the FireThorn OGSA-DAI Astronomy extensions.
        Based on a clone of the OGSA-DAI code in svn.
        ]]>
    </description>

    <properties>
    </properties>

    <dependencies>

        <!--+
            | OGSA-DAI dependencies.
            +-->
        <dependency>
            <groupId>uk.org.ogsadai</groupId>
            <artifactId>ogsadai-common</artifactId>
            <version>${ogsadai.version}</version>
        </dependency>
        <dependency>
            <groupId>uk.org.ogsadai</groupId>
            <artifactId>ogsadai-clientserver</artifactId>
            <version>${ogsadai.version}</version>
        </dependency>
        <dependency>
            <groupId>uk.org.ogsadai</groupId>
            <artifactId>ogsadai-client</artifactId>
            <version>${ogsadai.version}</version>
        </dependency>
        <dependency>
            <groupId>uk.org.ogsadai</groupId>
            <artifactId>ogsadai-relational-client</artifactId>
            <version>${ogsadai.version}</version>
        </dependency>

        <!--+
	        | The Apache HttpComponent libraries, used by our TAP client. 
            +-->
        <dependency>
            <groupId>org.apache.httpcomponents</groupId>
            <artifactId>httpclient</artifactId>
        </dependency>

        <!--+
            | The StarLink VOTable library, used by our TAP client. 
            +-->
        <dependency>
            <groupId>uk.ac.starlink</groupId>
            <artifactId>stil-util</artifactId>
        </dependency>
        <dependency>
            <groupId>uk.ac.starlink</groupId>
            <artifactId>stil-table</artifactId>
        </dependency>
        <dependency>
            <groupId>uk.ac.starlink</groupId>
            <artifactId>stil-votable</artifactId>
        </dependency>

    </dependencies>

</project>


