<configuration>

	<!--+
	    | Default console appender (e.g. tomcat/logs/catalina.out).
	    | http://logback.qos.ch/manual/configuration.html
	    | http://logback.qos.ch/manual/appenders.html
	    | http://logback.qos.ch/manual/layouts.html
	    +-->
	<appender name="console" class="ch.qos.logback.core.ConsoleAppender">
		<target>System.out</target>
        <encoder>
            <pattern>%date{ISO8601} %-5level [%thread] [%logger{0}] %message %n</pattern>
            <!-- %exception{short} -->
            <!-- %caller{2} -->
        </encoder>
	</appender>
	
	<!--+
	    | Commons BeanUtils.
	    +-->
	<logger name="org.apache.commons.beanutils">
		<level value="WARN"/>
	</logger>
	<!--+
	    | Commons configuration.
	    +-->
	<logger name="org.apache.commons.configuration">
		<level value="WARN"/>
	</logger>
	<logger name="org.apache.commons.configuration.DefaultConfigurationBuilder">
		<level value="ERROR"/>
	</logger>

	<!--+
	    | Root logger.
	    +-->
	<root>
		<priority value="${root-level:-INFO}" />
		<appender-ref ref="console" />
	</root>
	
</configuration>

