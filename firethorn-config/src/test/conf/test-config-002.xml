<configuration>

    <!--+
        | Load the Java system properties.
        +-->
    <system/>

    <!--+
        | Load a properties file from system config.
        +-->
    <properties fileName="/etc/firethorn.properties">
        <reloadingStrategy
            config-class="org.apache.commons.configuration.reloading.FileChangedReloadingStrategy"
            />
    </properties>

    <!--+
        | Load a properties file from user home.
        +-->
    <properties fileName="${user.home}/firethorn.properties">
        <reloadingStrategy
            config-class="org.apache.commons.configuration.reloading.FileChangedReloadingStrategy"
            />
    </properties>

</configuration>

