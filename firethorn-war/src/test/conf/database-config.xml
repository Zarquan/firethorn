    <bean id="FireThornDatabase" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="org.hsqldb.jdbcDriver"/>
        <property name="url" value="jdbc:hsqldb:mem:firethorn"/>
        <property name="username" value="sa"/>
        <property name="password" value=""/>
    </bean>

    <!--+
        | File based HSQLDB test database.
        +-->
    <bean id="FileData" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="org.hsqldb.jdbcDriver"/>
        <property name="url" value="jdbc:hsqldb:file:target/database/testdata"/>
        <property name="username" value="sa"/>
        <property name="password" value=""/>
    </bean>

    <!--+
        | Memory based HSQLDB test database.
        +-->
    <bean id="MemData" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="org.hsqldb.jdbcDriver"/>
        <property name="url" value="jdbc:hsqldb:mem:memdata"/>
        <property name="username" value="sa"/>
        <property name="password" value=""/>
    </bean>

</beans>

