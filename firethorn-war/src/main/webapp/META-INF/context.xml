<?xml version='1.0' encoding='utf-8'?>
<Context
    path="/firethorn"
    displayName="ROE WFAU FireThorn service"
    >

    <!--+
        | Reference to data source configured in server.xml.
        | http://pro-programmers.blogspot.com/2008/07/spring-datasource-jndi-lookup-from.html
        +-->
    <ResourceLink
        global="firethorn/database"
        name="firethorn/database"
        type="javax.sql.DataSource"
        /> 

    <!--+
        | Data source configured in context.xml.
        | http://pro-programmers.blogspot.com/2008/07/spring-datasource-jndi-lookup-from.html
    <Resource
        name="firethorn/database" 
        auth="Container"
        type="javax.sql.DataSource" 
        driverClassName="org.postgresql.Driver"
        url="jdbc:postgresql://hostname/database"
        username="username"
        password="password"
        maxActive="8" 
        maxIdle="4"
        />
        +-->

</Context>


