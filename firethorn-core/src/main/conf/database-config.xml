        <property name="url" value="${firethorn.ukidss.url}"/>
        <property name="username" value="${firethorn.ukidss.user}"/>
        <property name="password" value="${firethorn.ukidss.pass}"/>
        <property name="driverClassName" value="${firethorn.ukidss.driver}"/>
    </bean>

    <!--+
        | SSH tunnel to ROE database server.
        | ssh -L 1433:ramses3:1433 fenrir.roe.ac.uk
        +-->
    <bean id="RoeWFAU" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="url" value="${firethorn.wfau.url}"/>
        <property name="username" value="${firethorn.wfau.user}"/>
        <property name="password" value="${firethorn.wfau.pass}"/>
        <property name="driverClassName" value="${firethorn.wfau.driver}"/>
    </bean>

    <!--+
        | SSH tunnel to ROE database server.
        | ssh -L 1433:ramses3:1433 fenrir.roe.ac.uk
        +-->
    <bean id="RoeATLAS" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="url" value="${firethorn.atlas.url}"/>
