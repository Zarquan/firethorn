<?xml version="1.0" encoding="UTF-8"?>
<beans
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:cxt="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans         http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context       http://www.springframework.org/schema/context/spring-context-3.0.xsd
        ">

    <!--+
        | MetaData database.
        +-->
    <bean id="FireThornMetaData" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="url" value="${firethorn.meta.url}"/>
        <property name="username" value="${firethorn.meta.user}"/>
        <property name="password" value="${firethorn.meta.pass}"/>
        <property name="driverClassName" value="${firethorn.meta.driver}"/>
    </bean>

    <!--+
        | UserData database.
        +-->
    <bean id="FireThornUserData" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="url" value="${firethorn.user.url}"/>
        <property name="username" value="${firethorn.user.user}"/>
        <property name="password" value="${firethorn.user.pass}"/>
        <property name="driverClassName" value="${firethorn.user.driver}"/>
    </bean>

    <!--+
        | TestData database.
        +-->
    <bean id="FireThornTestData" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="url" value="${firethorn.test.url}"/>
        <property name="username" value="${firethorn.test.user}"/>
        <property name="password" value="${firethorn.test.pass}"/>
        <property name="driverClassName" value="${firethorn.test.driver}"/>
    </bean>

    <!-- ======== Live ROE database ======== -->

    <!--+
        | SSH tunnel to ROE database server.
        | ssh -L 1433:ramses3:1433 fenrir.roe.ac.uk
        +-->
    <bean id="RoeTWOMASS" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="url" value="${firethorn.twomass.url}"/>
        <property name="username" value="${firethorn.twomass.user}"/>
        <property name="password" value="${firethorn.twomass.pass}"/>
        <property name="driverClassName" value="${firethorn.twomass.driver}"/>
    </bean>

    <!--+
        | SSH tunnel to ROE database server.
        | ssh -L 1433:ramses3:1433 fenrir.roe.ac.uk
        +-->
    <bean id="RoeTWOXMM" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="url" value="${firethorn.twoxmm.url}"/>
        <property name="username" value="${firethorn.twoxmm.user}"/>
        <property name="password" value="${firethorn.twoxmm.pass}"/>
        <property name="driverClassName" value="${firethorn.twoxmm.driver}"/>
    </bean>

    <!--+
        | SSH tunnel to ROE database server.
        | ssh -L 1433:ramses3:1433 fenrir.roe.ac.uk
        +-->
