<project
    xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd"
    >
    <modelVersion>4.0.0</modelVersion>

    <groupId>uk.ac.roe.wfau</groupId>
    <artifactId>firethorn</artifactId>

    <packaging>pom</packaging>
    <version>1.0-SNAPSHOT</version>

    <!--+
        | Maven parent/child projects.
        | http://maven.apache.org/guides/introduction/introduction-to-the-pom.html#Project_Inheritance
        +-->
    <modules>
        <module>firethorn-tap</module>
        <!--module>firethorn-two</module-->
    </modules>

    <name>FireThorn TAP webservice</name>
    <description>
        <![CDATA[
        FireThorn TAP webservice.
        <br/>
        Named after the <a href='http://ukmoths.org.uk/show.php?bf=332a'>Firethorn Leaf Miner</a>
        moth <i>(Phyllonorycter leucographella)</i>.
        ]]>
    </description>
    <url>http://hempriggs.roe.ac.uk/redmine/projects/wva</url>

    <developers>

        <developer>
            <name>Dave Morris</name>
            <url>http://hempriggs.roe.ac.uk/redmine/users/3</url>
        </developer>

        <developer>
            <name>Keith Noddle</name>
            <url>http://hempriggs.roe.ac.uk/redmine/users/4</url>
        </developer>

        <developer>
            <name>Bob Mann</name>
            <url>http://hempriggs.roe.ac.uk/redmine/users/6</url>
        </developer>

    </developers>

    <properties>

        <project.javaversion>1.6</project.javaversion>

        <project.build.sourceencoding>UTF-8</project.build.sourceencoding>

		<org.spring.version>3.1.1.RELEASE</org.spring.version>
        <org.hibernate.version>3.6.9.Final</org.hibernate.version>
		<!--org.aspectj.version>1.6.11</org.aspectj.version-->

        <org.junit.version>4.8.2</org.junit.version>
		<org.slf4j.version>1.6.1</org.slf4j.version>
        <org.log4j.version>1.2.14</org.log4j.version>

        <!--org.apache.httpcomponents.version>4.1.1</org.apache.httpcomponents.version-->
        <!--httpcomponents.version>4.1.1</httpcomponents.version-->

    </properties>

    <repositories>

        <!--+
            | Local repository for our own products.
            +-->
        <repository>
            <id>firethorn-publish</id>
            <name>Local repository for our own products</name>
            <url>http://data.metagrid.co.uk/firethorn/maven/publish</url>
            <layout>default</layout>
        </repository>

        <!--+
            | Local repository for external components.
            +-->
        <repository>
            <id>firethorn-external</id>
            <name>Local repository for 3rd party components</name>
            <url>http://data.metagrid.co.uk/firethorn/maven/external</url>
            <layout>default</layout>
        </repository>

        <!--+
            | SpringSource repository.
            +-->
        <repository>
            <id>springsource-repo</id>
            <name>SpringSource Repository</name>
            <url>http://repo.springsource.org/release</url>
        </repository>

        <!--+
            | JBoss/Hibernate repository.
            +-->
        <repository>
            <id>org.jboss.maven.public</id>
            <name>JBoss Public Repository Group</name>
            <url>http://repository.jboss.org/nexus/content/groups/public</url>
        </repository>

    </repositories>

    <dependencies>

<!--+
    | http://maven.apache.org/guides/introduction/introduction-to-dependency-mechanism.html
    | http://www.sonatype.com/people/2009/10/maven-tips-and-tricks-grouping-dependencies/
    +-->	

		<!--+
		    | Joda Time Libraries.
		    | http://joda-time.sourceforge.net/
		    | http://joda-time.sourceforge.net/api-release/index.html
            | http://ogsa-dai.sourceforge.net/documentation/ogsadai4.1/ogsadai4.1-axis/BundledProducts.html#BundledJodaTime
		    +-->	
        <dependency>
            <groupId>joda-time</groupId>
            <artifactId>joda-time</artifactId>
            <version>1.6.2</version>
        </dependency>

        <!--+
            | JUnit test framework.
            +-->
    	<dependency>
    		<groupId>junit</groupId>
    		<artifactId>junit</artifactId>
            <version>${org.junit.version}</version>
            <scope>test</scope>
    	</dependency>

		<!--+
		    | Java Servlet libraries.
		    +-->
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>servlet-api</artifactId>
			<version>2.5</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>javax.servlet.jsp</groupId>
			<artifactId>jsp-api</artifactId>
			<version>2.1</version>
			<scope>provided</scope>
		</dependency>

        <!--+
            | SLf4J libraries.
            | 
            +-->
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>${org.slf4j.version}</version>
        </dependency>
        <!--dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-simple</artifactId>
            <version>${org.slf4j.version}</version>
        </dependency-->
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-log4j12</artifactId>
            <version>${org.slf4j.version}</version>
        </dependency>

        <!--+
            | Log4J libraries.
            | http://logging.apache.org/log4j/1.2/index.html
            | http://static.springsource.org/spring/docs/3.0.5.RELEASE/reference/overview.html
            +-->
    	<dependency>
    		<groupId>log4j</groupId>
    		<artifactId>log4j</artifactId>
            <version>${org.log4j.version}</version>
    	</dependency>

        <!--+
            | Apache commons logging.
            +-->
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <version>1.1.1</version>
        </dependency>

        <!--+
            | Apache commons libraries.
            +-->
        <dependency>
            <groupId>commons-codec</groupId>
            <artifactId>commons-codec</artifactId>
            <version>1.3</version>
        </dependency>
        <dependency>
            <groupId>commons-collections</groupId>
            <artifactId>commons-collections</artifactId>
            <version>3.2.1</version>
        </dependency>
        <dependency>
            <groupId>commons-dbcp</groupId>
            <artifactId>commons-dbcp</artifactId>
            <version>1.3</version>
        </dependency>
        <dependency>
            <groupId>commons-discovery</groupId>
            <artifactId>commons-discovery</artifactId>
            <version>0.5</version>
        </dependency>
        <dependency>
            <groupId>commons-httpclient</groupId>
            <artifactId>commons-httpclient</artifactId>
            <version>3.1</version>
        </dependency>
        <dependency>
            <groupId>commons-pool</groupId>
            <artifactId>commons-pool</artifactId>
            <version>1.5.4</version>
        </dependency>


    </dependencies>

</project>



