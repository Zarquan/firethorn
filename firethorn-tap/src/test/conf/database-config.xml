<?xml version="1.0" encoding="UTF-8"?>
<beans
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        "
    >

    <!--+
        | Local Postgresql test database.
        +-->
    <bean id="PostgresqlData" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="org.postgresql.Driver"/>
        <property name="url" value="jdbc:postgresql://localhost/firethorndata"/>
        <property name="username" value="firethornuser"/>
        <property name="password" value="waetrsa-q7jj25wa.7"/>
    </bean>

    <!--+
        | Memory based HSQLDB database.
        | http://dwark.blogspot.co.uk/2006/10/maven-2-hibernate-hsqldb.html
        | https://numberformat.wordpress.com/2010/06/03/creating-and-using-hsqldb-database-using-maven-in-10-minutes/
        +-->
    <bean id="MemoryDatabase" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="org.hsqldb.jdbcDriver"/>
        <property name="url" value="jdbc:hsqldb:mem:firethorn"/>
        <property name="username" value="sa"/>
        <property name="password" value=""/>
    </bean>

    <!--+
        | File based HSQLDB database.
        +-->
    <bean id="FileTest" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="org.hsqldb.jdbcDriver"/>
        <property name="url" value="jdbc:hsqldb:file:target/database/testdata"/>
        <property name="username" value="sa"/>
        <property name="password" value=""/>
    </bean>

    <!--+
        | Memory based HSQLDB database.
        +-->
    <bean id="MemTest" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="org.hsqldb.jdbcDriver"/>
        <property name="url" value="jdbc:hsqldb:mem:memdata"/>
        <property name="username" value="sa"/>
        <property name="password" value=""/>
    </bean>

    <!--+
        | Local SSH tunnel to ROE database server.
        | ** name and pass redacted **
        +-->
    <bean id="RoeTunnel" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="net.sourceforge.jtds.jdbc.Driver"/>
        <property name="url" value="jdbc:jtds:sqlserver://localhost:1433/twomass"/>
    </bean>

</beans>

